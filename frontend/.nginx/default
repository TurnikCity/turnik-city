# Expires map
map $sent_http_content_type $expires {
  default                      off;
  text/html                    epoch;
  text/css                     max;
  image/png                    max;
  application/javascript       max;
  application/x-font-opentype  max;
}

server {
  set $prerender 0;

  if ($http_user_agent ~* "googlebot|bingbot|facebookexternalhit") {
    # set $prerender 1; disabled due to debug
    set $prerender 0;
  }

  # ignored paths and files
  if ($uri ~* "\.(js|css|xml|less|png|jpg|jpeg)") {
    set $prerender 0;
  }

  if ($host != "turnik.city") {
    return 301 https://turnik.city$request_uri;
  }

  # gzip
  gzip             on;
  gzip_min_length  500;
  gzip_proxied     any;
  gzip_comp_level  4;
  gzip_types       text/css text/javascript text/xml text/plain text/x-component application/javascript application/json application/xml application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;
  gzip_vary        on;
  gzip_disable     "msie6";

  listen 8080;
  listen [::]:8080;
  root /home/site/wwwroot;
  index  index.html
  server_name turnik.city;
  port_in_redirect off;

  # assets caching
  expires $expires;

  location / {
    if ($prerender = 1) {
      rewrite (.*) /prerenderio last;
    }

	# Angular routing
	try_files $uri $uri/ /index.html;
  }

  location /prerenderio {
    if ($prerender = 0) {
      return 404;
    }

    proxy_set_header X-Prerender-Token 7TZTrhM81Y0lLQ04Tx38;

    proxy_hide_header Cache-Control;
    add_header Cache-Control "private,max-age=600,must-revalidate";

    #resolve using Google's DNS server to force DNS resolution and prevent caching of IPs
    resolver 8.8.8.8 8.8.4.4;
    set $prerender_host "service.prerender.io";
    proxy_pass https://$prerender_host;
    rewrite .* /$scheme://$host$request_uri? break;
  }
}

